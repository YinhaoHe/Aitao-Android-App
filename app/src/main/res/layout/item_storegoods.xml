<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="136dp">
    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="136dp">
        <ImageView
            android:id="@+id/id_img_item_storegoods_head"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/img_defaultavatar"
            android:layout_width="120dp"
            android:layout_height="120dp" />
        <TextView
            android:lines="2"
            android:id="@+id/id_tv_item_storegoods_name"
            android:ellipsize="end"
            android:textColor="#333"
            android:textSize="14sp"
            android:layout_marginRight="18dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/id_img_item_storegoods_head"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/id_tv_item_storegoods_price"
            android:layout_marginTop="20dp"
            android:text="￥700.0"
            android:textColor="@color/colorTheme"
            android:textSize="17sp"
            android:layout_marginLeft="12dp"
            android:layout_below="@+id/id_tv_item_storegoods_name"
            android:layout_toRightOf="@+id/id_img_item_storegoods_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/id_tv_item_storegoods_salenum"
            android:layout_marginTop="12dp"
            android:text="销量:500"
            android:textColor="#707070"
            android:textSize="11sp"
            android:layout_marginLeft="12dp"
            android:layout_below="@+id/id_tv_item_storegoods_price"
            android:layout_toRightOf="@+id/id_img_item_storegoods_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginBottom="20dp"
            android:layout_marginRight="18dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_more"
            android:layout_width="12dp"
            android:layout_height="3dp" />
    </RelativeLayout>


</LinearLayout>