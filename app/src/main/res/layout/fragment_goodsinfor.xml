<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/id_btn_goodsinfor_back"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/goods_information"
            android:textColor="#333"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/id_btn_storegoods_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="@string/edit"
            android:textColor="#707070"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ddd" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/id_img_goodsinfor"
                android:layout_width="360dp"
                android:layout_height="360dp"
                android:src="@drawable/img_defaultavatar" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingLeft="16dp"
                android:paddingRight="20dp">

                <TextView
                    android:id="@+id/id_tv_goodsinfor_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="2"
                    android:paddingTop="16dp"
                    android:text="商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称"
                    android:textColor="#333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/id_tv_goodsinfor_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_tv_goodsinfor_name"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="￥100.0"
                    android:textColor="@color/colorTheme"
                    android:textSize="27sp" />

                <TextView
                    android:id="@+id/id_tv_goodsinfor_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_tv_goodsinfor_price"
                    android:paddingBottom="10dp"
                    android:text="库存:100"
                    android:textColor="#707070"
                    android:textSize="11sp" />

                <TextView

                    android:id="@+id/id_tv_goodsinfor_intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_tv_goodsinfor_number"
                    android:paddingBottom="10dp"
                    android:text="商品简介商品简介商品简介商品简介商品简介商品简介商品简介商品简介商品简介商品简介商品简介商品简介商品简介商品简介商品简介商品简介商品简介商品简介商品简介商品简介商品简介商品简介商品简介商品简介商品简介商品简介商品简介商品简介商品简介商品简介商品简介"
                    android:textColor="#707070"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/id_btn_goodsinfor_seecomment"
                    android:layout_width="65dp"
                    android:layout_height="34dp"
                    android:layout_toLeftOf="@+id/id_btn_goodsinfor_purchase"
                    android:layout_marginTop="62dp"
                    android:background="@drawable/btn_register"
                    android:gravity="center"
                    android:text="@string/see_comment"
                    android:textColor="#aaa" />

                <TextView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/id_btn_goodsinfor_purchase"
                    android:layout_width="65dp"
                    android:layout_height="34dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="62dp"
                    android:background="@drawable/btn_login"
                    android:gravity="center"
                    android:text="@string/purchase_now"
                    android:textColor="#fff"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
