<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/id_btn_record_back"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/id_tv_record_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/edit_goods"
            android:textColor="#333"
            android:textSize="17sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ddd" />
    <RelativeLayout
        android:id="@+id/id_rl_record_no"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/id_img_record_no"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:src="@drawable/icon_nogoods" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_img_record_no"
            android:layout_centerHorizontal="true"
            android:text="还没有任何记录"
            android:textColor="#707070"
            android:textSize="14sp" />
    </RelativeLayout>

    <com.mingle.widget.LoadingView
        android:id="@+id/id_load_record"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:loadingText="@string/loading" />

    <ListView
        android:id="@+id/id_lv_record"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>