<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <ImageView
            android:src="@drawable/img_defaultavatar"
            android:id="@+id/id_img_item_store"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_width="48dp"
            android:layout_height="48dp" />
        <TextView
            android:id="@+id/id_tv_item_store_name"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginLeft="12dp"
            android:text="店铺名称写这么长就要加点了..."
            android:textColor="#333"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/id_img_item_store_more"
            android:layout_toRightOf="@+id/id_img_item_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/id_img_item_store_more"
            android:src="@drawable/icon_more"
            android:layout_marginRight="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="12dp"
            android:layout_height="3dp" />

    </RelativeLayout>

</LinearLayout>