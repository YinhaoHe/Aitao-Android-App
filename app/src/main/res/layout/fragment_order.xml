<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="#f5f5f5"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.mingle.widget.LoadingView
        android:id="@+id/id_load_order"
        app:loadingText="支付中..."
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:id="@+id/id_rl_oreder_1"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="47dp">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/id_btn_order_back"
            android:layout_marginLeft="12dp"
            android:src="@drawable/icon_back"
            android:layout_width="15dp"
            android:layout_height="15dp" />
        <TextView
            android:textColor="#333"
            android:textSize="17sp"
            android:layout_centerInParent="true"
            android:text="@string/confirm_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_below="@+id/id_rl_oreder_1"
        android:id="@+id/id_v_oreder_2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#aaa"/>
    <RelativeLayout
        android:layout_below="@+id/id_v_oreder_2"
        android:id="@+id/id_rl_oreder_2"
        android:paddingRight="16dp"
        android:paddingLeft="8dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="132dp">
        <ImageView
            android:id="@+id/id_img_order_img"
            android:src="@drawable/img_defaultavatar"
            android:layout_centerVertical="true"
            android:layout_width="120dp"
            android:layout_height="120dp" />
        <TextView
            android:id="@+id/id_tv_order_name"
            android:ellipsize="end"
            android:text="商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/id_img_order_img"
            android:textSize="14sp"
            android:textColor="#333"
            android:lines="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/id_tv_order_price"
            android:textColor="#333"
            android:textSize="14sp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="18dp"
            android:layout_below="@id/id_tv_order_name"
            android:layout_toRightOf="@id/id_img_order_img"
            android:text="￥799.0×1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#333"
            android:textSize="14sp"
            android:text="@string/total"
            android:id="@+id/id_tv_order_total_static"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/id_img_order_img"
            android:layout_below="@+id/id_tv_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/id_tv_order_total"
            android:textColor="@color/colorTheme"
            android:textSize="17sp"
            android:text="￥799.0"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="16dp"
            android:layout_below="@id/id_tv_order_price"
            android:layout_toRightOf="@+id/id_tv_order_total_static"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/id_rl_oreder_2"
        android:id="@+id/id_ll_oreder_3"
        android:background="#ffffff"
        android:paddingRight="16dp"
        android:paddingLeft="12dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/address"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="#707070"
            />
        <EditText
            android:id="@+id/id_et_order"
            android:textColorHint="#707070"
            android:gravity="top|left"
            android:hint="@string/input_address"
            android:textColor="#333"
            android:textSize="14sp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="146dp"
            android:inputType="text" />
    </LinearLayout>
    <TextView
        android:id="@+id/id_btn_order_confirm"
        android:layout_marginBottom="60dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#fff"
        android:background="@drawable/btn_login"
        android:layout_alignParentBottom="true"
        android:text="@string/confirm_order"
        android:layout_width="270dp"
        android:layout_height="40dp" />



</RelativeLayout>